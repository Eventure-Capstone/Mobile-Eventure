<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_explorer">

    <fragment
        android:id="@+id/navigation_explorer"
        android:name="com.eventurecapstone.eventure.view.saved_event.SavedEventFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_saved_event" />

    <fragment
        android:id="@+id/navigation_saved"
        android:name="com.eventurecapstone.eventure.view.explorer.ExplorerFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_explorer" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.eventurecapstone.eventure.view.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" />
</navigation>
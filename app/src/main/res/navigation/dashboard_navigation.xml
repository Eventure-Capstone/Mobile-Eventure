<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_explorer">

    <fragment
        android:id="@+id/navigation_explorer"
        android:name="com.eventurecapstone.eventure.view.dashboard.explorer.ExplorerFragment"
        android:label="@string/explorer"
        tools:layout="@layout/fragment_explorer" />

    <fragment
        android:id="@+id/navigation_maps"
        android:name="com.eventurecapstone.eventure.view.dashboard.maps.MapsFragment"
        android:label="@string/maps"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/navigation_saved"
        android:name="com.eventurecapstone.eventure.view.dashboard.saved_event.SavedEventFragment"
        android:label="@string/saved"
        tools:layout="@layout/fragment_saved_event" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.eventurecapstone.eventure.view.dashboard.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />
</navigation>
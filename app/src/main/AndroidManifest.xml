<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Eventure"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY" />

        <activity
            android:name=".view.search.SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.Eventure.NoActionBar" />
        <activity
            android:name=".view.detail.DetailActivity"
            android:label="@string/detail"
            android:exported="false" />
        <activity
            android:name=".view.my_post.MyPostActivity"
            android:exported="false" />
        <activity
            android:name=".view.create_post.CreatePostActivity"
            android:exported="false" />
        <activity
            android:name=".view.change_password.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".view.edit_profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".view.choose_interest.ChooseEvent"
            android:exported="false" />
        <activity
            android:name=".view.choose_interest.ChooseCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.welcome_screen.WelcomeScreenActivity"
            android:exported="false" />
        <activity
            android:name=".view.dashboard.DashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard" />
        <activity
            android:name=".view.splash.SplashActivity"
            android:theme="@style/Theme.Eventure.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>